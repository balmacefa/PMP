{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "ESNext",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist"]
}
